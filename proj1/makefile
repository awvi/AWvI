################################################################################
#                                                                              #
# Makefile                                                                     #
#                                                                              #
################################################################################

################################################################################

CC	=	gcc
SRC	=	main.c nextion.c dht.c
CFLAGS	= -Wall
LDLIBS    = -lwiringPi -lpthread -lm
OBJS	=	$(SRC:.c=.o)

################################################################################

BIN	=	main

all:		 $(BIN)

$(BIN):	$(OBJS)
		$(CC) -o $(BIN) $(OBJS) $(LDLIBS) $(CFLAGS)
clean:
		rm -f $(OBJS)
fclean:		clean
		rm -f $(BIN)
re: fclean all

################################################################################
